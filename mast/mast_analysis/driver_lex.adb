with Rts_Lex; use Rts_Lex;
with Rts_Parser_Tokens; use Rts_Parser_Tokens;
with Ada.TExt_IO; use Ada.Text_IO;
procedure Driver_Lex is

   Tok : Token;
begin
   loop
      Tok:=Yylex;
      Put_Line(Token'Image(Tok));
      exit when Tok=End_Of_Input;
   end loop;
end Driver_Lex;
